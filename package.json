{
  "name": "chess.js",
  "version": "1.0.0-alpha",
  "main": "dist/chess.js",
  "types": "dist/chess.d.ts",
  "license": "BSD-2-Clause",
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.16",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "husky": "4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "10.5.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build": "tsc",
    "lint": "eslint src/ --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src/ --ext .ts,.tsx,.js,.jsx --fix"
  },
  "lint-staged": {
    "**/*.json": [
      "prettier --write",
      "git add"
    ],
    "**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "yarn lint --",
      "git add"
    ]
  }
}
